{
    "version": "2.0.0",
    "tasks": [
        // Linux build targets.
        {
            "label": "Build Debug Linux",
            "group": "build",
            "type": "shell",
            "command": "cargo",
            "args": ["build"],
            "problemMatcher": ["$rustc"]
        },
        {
            "label": "Build Release Linux",
            "group": "build",
            "type": "shell",
            "command": "cargo",
            "args": ["build", "--release"],
            "problemMatcher": ["$rustc"]
        },
        {
            "label": "Run Debug",
            "group": "build",
            "type": "shell",
            "command": "cargo",
            "args": ["run"],
            "problemMatcher": ["$rustc"]
        },
        {
            "label": "Run Release",
            "group": "build",
            "type": "shell",
            "command": "cargo",
            "args": ["run", "--release"],
            "problemMatcher": ["$rustc"]
        },
        {
            "label": "Test",
            "group": "build",
            "type": "shell",
            "command": "cargo",
            "args": ["test"],
            "problemMatcher": ["$rustc"]
        },
        // Windows build targets.
        {
            "label": "Build Debug Windows",
            "group": "build",
            "type": "shell",
            "command": "cargo",
            "args": ["build", "--target=x86_64-pc-windows-gnu"],
            "problemMatcher": ["$rustc"]
        },
        {
            "label": "Build Release Windows",
            "group": "build",
            "type": "shell",
            "command": "cargo",
            "args": ["build", "--release", "--target=x86_64-pc-windows-gnu"],
            "problemMatcher": ["$rustc"]
        }
    ]
}